<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Gestión de Productos</title>

  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/styles/productos/base.css">
</head>

<body>

  <main>
    <section id="mensaje"></section>

    <!-- Formulario de productos -->
    <form id="formProducto" aria-labelledby="formProducto">
      <input type="hidden" name="id_restaurante" id="id_restaurante">

      <fieldset class="card-style">
        <legend><i class="fas fa-info-circle"></i> Información del Producto</legend>

        <div class="form-group">
          <label for="nombre_producto">Nombre del producto:</label>
          <input type="text" name="nombre_producto" id="nombre_producto" class="input-control" required>
        </div>

        <div class="form-group">
          <label for="descripcion">Descripción:</label>
          <textarea name="descripcion" id="descripcion" class="input-control" aria-describedby="descripcionHelp"></textarea>
          <small id="descripcionHelp" class="form-text">Proporcione una breve descripción del producto.</small>
        </div>

        <div class="form-group">
          <label for="precio">Precio:</label>
          <input type="number" name="precio" id="precio" class="input-control" step="0.01" required>
        </div>

        <div class="form-group spacing-below">
          <label for="categoria">Categoría:</label>
          <select name="categoria" id="categoria" class="input-control" required>
            <option value="">Seleccione una categoría</option>
          </select>
        </div>

        <div class="form-group spacing-below">
          <button type="button" id="btnAgregarCategoria" class="btn-primary" aria-label="Agregar Categoría">
            <i class="fas fa-plus-circle"></i> Agregar Categoría
          </button>
        </div>

        <div id="formCategoria" class="modal-card spacing-below" style="display: none;">
          <h3>Agregar Nueva Categoría</h3>
          <div class="form-group">
            <label for="nombre_categoria">Nombre de la categoría:</label>
            <input type="text" id="nombre_categoria" name="nombre_categoria" class="input-control">
          </div>
          <div class="form-actions">
            <button type="button" id="btnGuardarCategoria" class="btn-primary">Guardar</button>
            <button type="button" id="btnCancelarCategoria" class="btn-danger">Cancelar</button>
          </div>
        </div>

        <div class="form-actions">
          <button type="submit" id="btnGuardar" class="btn-primary">
            <i class="fas fa-plus-circle"></i> Agregar Producto
          </button>
          <button type="button" id="btnActualizar" class="btn-warning" style="display: none;">
            <i class="fas fa-sync-alt"></i> Actualizar Producto
          </button>
          <button type="button" id="btnCancelar" class="btn-danger" style="display: none;">
            <i class="fas fa-times"></i> Cancelar
          </button>
        </div>
      </fieldset>
    </form>

    <section id="buscador-container">
      <label for="buscador">Buscar producto:</label>
      <input type="text" id="buscador" placeholder="Buscar producto..." aria-label="Buscar producto">
    </section>

    <section id="productos-container">
      <h2>Lista de Productos</h2>
      <table id="tablaProductos" aria-labelledby="productos-container">
        <thead>
          <tr>
            <th>ID</th>
            <th>nombre</th>
            <th>descripción</th>
            <th>precio</th>
            <th>categoría</th>
            <th>disponible</th>
            <th>acciones</th>
          </tr>
        </thead>
        <tbody></tbody>
      </table>
    </section>

    <!-- Formulario para agregar empleados -->
    <form id="formEmpleado" aria-labelledby="formEmpleado" style="margin-top: 2rem;">
      <fieldset class="card-style">
        <legend><i class="fas fa-user-plus"></i> Agregar Empleado</legend>

        <input type="hidden" name="rol" value="empleado">

        <div class="form-group">
          <label for="nombre_empleado">Nombre del Empleado:</label>
          <input type="text" name="nombre" id="nombre_empleado" class="input-control" required>
        </div>

        <div class="form-group">
          <label for="clave_empleado">Clave (contraseña):</label>
          <input type="password" name="clave" id="clave_empleado" class="input-control" required>
        </div>

        <div class="form-actions">
          <button type="submit" id="btnGuardarEmpleado" class="btn-primary">
            <i class="fas fa-user-plus"></i> Agregar Empleado
          </button>
        </div>
      </fieldset>
    </form>
  </main>

  <!-- Contenedor de notificaciones -->
  <div id="toast-container"></div>

  <!-- Script principal -->
  <script type="module" src="/scripts/productos.js"></script>
</body>

</html>
