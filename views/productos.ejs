<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Gestión de Productos</title>

  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

  <link rel="stylesheet" href="/styles/productos/base.css">
  <link rel="stylesheet" href="/styles/productos/form.css">
  <link rel="stylesheet" href="/styles/productos/buttons.css">
  <link rel="stylesheet" href="/styles/productos/table.css">
  <link rel="stylesheet" href="/styles/productos/badges.css">
  <link rel="stylesheet" href="/styles/productos/responsive.css">
</head>

<body>
  <header>
    <h1>Gestión de Productos - Admin</h1>
  </header>

  <main>
    <section id="mensaje"></section>

    <form id="formProducto" aria-labelledby="formProducto">
      <input type="hidden" name="id_restaurante" id="id_restaurante">

      <fieldset>
        <legend>Información del Producto</legend>

        <div class="form-group">
          <label for="nombre_producto">Nombre del producto:</label>
          <input type="text" name="nombre_producto" id="nombre_producto" required aria-required="true">
        </div>

        <div class="form-group">
          <label for="descripcion">Descripción:</label>
          <textarea name="descripcion" id="descripcion" aria-describedby="descripcionHelp"></textarea>
          <small id="descripcionHelp" class="form-text text-muted">Proporcione una breve descripción del producto.</small>
        </div>

        <div class="form-group">
          <label for="precio">Precio:</label>
          <input type="number" name="precio" id="precio" step="0.01" required aria-required="true">
        </div>

        <div class="form-group">
          <label for="categoria">Categoría:</label>
          <select name="categoria" id="categoria" required aria-required="true">
            <option value="">Seleccione una categoría</option>
            <option value="Entradas">Entradas</option>
            <option value="Menu">Menú</option>
            <option value="Combos">Combos</option>
            <option value="Postres">Postres</option>
            <option value="Bebidas">Bebidas</option>
          </select>
        </div>

        <div class="form-actions">
          <button type="submit" id="btnGuardar" aria-label="Agregar Producto">
            <i class="fas fa-plus"></i> Agregar Producto
          </button>
          <button type="button" id="btnActualizar" style="display: none;" aria-label="Actualizar Producto">
            <i class="fas fa-sync-alt"></i> Actualizar Producto
          </button>
          <button type="button" id="btnCancelar" style="display: none;" aria-label="Cancelar">
            <i class="fas fa-times"></i> Cancelar
          </button>
        </div>
      </fieldset>
    </form>

    <section id="buscador-container">
      <label for="buscador">Buscar producto:</label>
      <input type="text" id="buscador" placeholder="Buscar producto..." oninput="filtrarProductos()" aria-label="Buscar producto">
    </section>

    <section id="productos-container">
      <h2>Lista de Productos</h2>
      <table id="tablaProductos" aria-labelledby="productos-container">
        <thead>
          <tr>
            <th>nombre</th> <!-- Eliminado ID -->
            <th>nombre</th>
            <th>descripción</th>
            <th>precio</th>
            <th>categoría</th>
            <th>disponible</th>
            <th>acciones</th>
          </tr>
        </thead>
        <tbody></tbody>
      </table>
    </section>
  </main>

  <script src="/js/productos.js"></script>
</body>

</html>
