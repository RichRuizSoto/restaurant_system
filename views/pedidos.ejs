<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Pedidos Restaurante <%= restId %></title>
  <link rel="stylesheet" href="/styles/pedidos/pedidos.css">
</head>
<body>
  <h1>Pedidos del Restaurante ID <%= restId %></h1>

  <!-- Barra de navegación -->
  <div class="nav-buttons">
    <button class="nav-button active" data-seccion="solicitado" id="btn-solicitado">Solicitado</button>
    <button class="nav-button" data-seccion="listo" id="btn-listo">Listo</button>
    <button class="nav-button" data-seccion="pagado" id="btn-pagado">Pagado</button>
  </div>

  <% const estados = ['solicitado', 'listo', 'pagado']; %>

  <% estados.forEach(estado => { %>
    <section id="<%= estado %>-section" class="pedido-section <%= estado === 'solicitado' ? 'active' : '' %>">
      <h2>Pedidos <%= estado %></h2>
      <ul>
        <% if (Array.isArray(pedidos[estado]) && pedidos[estado].length > 0) { %>
          <% pedidos[estado].forEach(pedido => { %>
            <li id="pedido-<%= pedido.id %>" class="pedido-item">
              <div class="pedido-header">
                <span><strong>Orden:</strong> #<%= pedido.numero_orden %></span>
                <span><strong>Mesa:</strong> <%= pedido.mesa %></span>
                <span><strong>Total:</strong> $<%= parseFloat(pedido.total).toFixed(2) %></span>
                <span><strong>Creado:</strong> <%= pedido.creado_en ? new Date(pedido.creado_en).toLocaleString() : 'Fecha no disponible' %></span>
              </div>
              <ul class="productos-list">
                <% if (Array.isArray(pedido.productos) && pedido.productos.length > 0) { %>
                  <% pedido.productos.forEach(prod => { %>
                    <li class="producto-item">
                      <%= (prod.nombre && prod.nombre.trim()) ? prod.nombre : `Producto ID ${prod.id_producto}` %> × <%= prod.cantidad %> 
                      ($<%= prod.precio_unitario ?? prod.precio ?? '---' %>)
                    </li>
                  <% }) %>
                <% } else { %>
                  <li>No hay productos disponibles</li>
                <% } %>
              </ul>

              <% if (estado === 'solicitado') { %>
                <button class="button" onclick="actualizarEstadoPedido(<%= pedido.id %>, 'listo')">Marcar como listo</button>
              <% } else if (estado === 'listo') { %>
                <button class="button" onclick="actualizarEstadoPedido(<%= pedido.id %>, 'pagado')">Marcar como pagado</button>
              <% } else if (estado === 'pagado') { %>
                <span>Pedido ya pagado</span>
              <% } %>
            </li>
          <% }) %>
        <% } else { %>
          <li class="no-pedidos">No hay pedidos en este estado.</li>
        <% } %>
      </ul>
    </section>
  <% }) %>

  <script src="/socket.io/socket.io.js"></script>
  <script src="/js/pedidosSocket.js"></script>

  <script>
    // Lógica para cambiar sección activa
    document.addEventListener('DOMContentLoaded', () => {
      const botones = document.querySelectorAll('.nav-button');
      const secciones = document.querySelectorAll('.pedido-section');

      botones.forEach(boton => {
        boton.addEventListener('click', () => {
          const estado = boton.dataset.seccion;

          // Desactivar todos los botones y secciones
          botones.forEach(b => b.classList.remove('active'));
          secciones.forEach(s => s.classList.remove('active'));

          // Activar los seleccionados
          boton.classList.add('active');
          const seccionActiva = document.getElementById(`${estado}-section`);
          if (seccionActiva) {
            seccionActiva.classList.add('active');
          }
        });
      });
    });
  </script>
</body>
</html>
