<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Menú de <%= restaurante.nombre %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">


  <link rel="stylesheet" href="/styles/menu/global.css">


  <!-- Font Awesome para íconos -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
</head>
<body class="tema-oscuro"> <!-- o "tema-fantasia", o simplemente "" para claro -->
  <div class="container">
    <!-- Encabezado del sitio -->
    <header>
      <h1><i class="fas fa-utensils"></i> Menú de <%= restaurante.nombre %></h1>
    </header>
<div class="notification-container" id="notification-container"></div>
    <!-- Información del restaurante -->
    <section class="info-restaurante">
      <h2><i class="fas fa-info-circle"></i> Detalles del Restaurante</h2>
      <p><strong>Nombre:</strong> <%= restaurante.nombre %></p>
      <p><strong>Estado:</strong> <%= restaurante.estado %></p>
      <p><strong>Creado el:</strong> <%= new Date(restaurante.creado_en).toLocaleDateString('es-ES') %></p>
      <p><strong>Slug:</strong> <%= restaurante.slug %></p>
    </section>

    <!-- Secciones de productos por categoría -->
    <% for (const categoria in productosPorCategoria) { %>
      <section class="categoria">
        <h2><i class="fas fa-tags"></i> <%= categoria %></h2>

        <% productosPorCategoria[categoria].forEach(producto => { %>
          <div class="producto">
            <h3><%= producto.nombre_producto %></h3>
            <p><%= producto.descripcion %></p>
            <p><strong>$<%= producto.precio %></strong></p>
            <button class="btn-agregar" data-producto='<%- JSON.stringify(producto) %>'>
              <i class="fas fa-cart-plus"></i> Agregar
            </button>
          </div>
        <% }) %>
      </section>
    <% } %>

    <!-- Sección del carrito -->
    <section id="carrito">
      <h2><i class="fas fa-receipt"></i> Tu Pedido</h2>

      <label for="mesa"><i class="fas fa-chair"></i> Número de mesa:</label>
      <input type="text" id="mesa" list="mesas-lista" placeholder="Escribe o selecciona una mesa">
      <datalist id="mesas-lista">
        <!-- Las opciones de mesa se llenarán dinámicamente con JS -->
      </datalist>

      <ul id="lista-carrito">
        <!-- Elementos del carrito se insertan por JS -->
      </ul>

      <p><strong>Total: $<span id="total-carrito">0.00</span></strong></p>

      <button id="btn-enviar-pedido">
        <i class="fas fa-paper-plane"></i> Enviar Pedido
      </button>
    </section>

    <!-- Notificaciones emergentes -->
    <div id="notification-container"></div>
  </div>

  <!-- Variable global para JS -->
  <script>
    window.restauranteId = <%= restaurante.id %>;

    // Suponiendo que el número de mesas disponibles es 10
    const mesas = ['Mesa 1', 'Mesa 2', 'Mesa 3', 'Mesa 4', 'Mesa 5', 'Mesa 6', 'Mesa 7', 'Mesa 8', 'Mesa 9', 'Mesa 10'];

    const datalist = document.getElementById('mesas-lista');
    
    // Limpiamos las opciones anteriores
    datalist.innerHTML = '';

    // Generamos las opciones del datalist
    mesas.forEach(mesa => {
      const option = document.createElement('option');
      option.value = mesa;
      datalist.appendChild(option);
    });
  </script>

  <!-- JS personalizado -->
  <script src="/js/menu.js"></script>
</body>
</html>
