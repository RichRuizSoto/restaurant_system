    <ul id="lista-carrito">
      <!-- Productos agregados se insertarÃ¡n aquÃ­ -->
    </ul>

    <p><strong>Total: $<span id="total-carrito">0.00</span></strong></p>
    <button id="btn-enviar-pedido">Enviar Pedido</button>
