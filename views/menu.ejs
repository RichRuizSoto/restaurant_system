<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Menú de <%= restaurante.nombre %></title>
  <link rel="stylesheet" href="/<%= slug %>/menu/menu.css">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  
  <!-- Font Awesome para íconos -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
</head>
<body>
  <div class="container">
    <header>
      <h1><i class="fas fa-utensils"></i> Menú de <%= restaurante.nombre %></h1>
    </header>

    <!-- Información del restaurante -->
    <section class="info-restaurante">
      <h2><i class="fas fa-info-circle"></i> Detalles del Restaurante</h2>
      <p><strong>Nombre:</strong> <%= restaurante.nombre %></p>
      <p><strong>Estado:</strong> <%= restaurante.estado %></p>
      <p><strong>Creado el:</strong> <%= new Date(restaurante.creado_en).toLocaleDateString('es-ES') %></p>
      <p><strong>Slug:</strong> <%= restaurante.slug %></p>
    </section>

    <!-- Menú agrupado por categorías -->
    <% for (const categoria in productosPorCategoria) { %>
      <section class="categoria">
        <h2><i class="fas fa-tags"></i> <%= categoria %></h2>
        <% productosPorCategoria[categoria].forEach(producto => { %>
          <div class="producto">
            <h3><%= producto.nombre_producto %></h3>
            <p><%= producto.descripcion %></p>
            <p><strong>$<%= producto.precio %></strong></p>
            <button class="btn-agregar" data-producto='<%- JSON.stringify(producto) %>'>
              <i class="fas fa-cart-plus"></i> Agregar
            </button>
          </div>
        <% }) %>
      </section>
    <% } %>

    <!-- Resumen del carrito -->
    <section id="carrito">
      <h2><i class="fas fa-receipt"></i> Tu Pedido</h2>
      <label for="mesa">Número de mesa:</label>
      <input type="number" id="mesa" min="1" value="1"><br><br>

      <ul id="lista-carrito">
        <!-- Productos agregados se insertarán aquí -->
      </ul>

      <p><strong>Total: $<span id="total-carrito">0.00</span></strong></p>
      <button id="btn-enviar-pedido">
        <i class="fas fa-paper-plane"></i> Enviar Pedido
      </button>
    </section>

    <!-- Contenedor para notificaciones -->
    <div id="notification-container"></div>
  </div>

  <!-- Pasar el ID del restaurante al JS -->
  <script>
    window.restauranteId = <%= restaurante.id %>;
  </script>

  <!-- JS personalizado -->
  <script src="/js/menu.js"></script>
</body>
</html>
