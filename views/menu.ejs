        <div class="producto">
          <h3><%= producto.nombre_producto %></h3>
          <p><%= producto.descripcion %></p>
          <p><strong>$<%= producto.precio %></strong></p>
          <button class="btn-agregar" data-producto='<%- JSON.stringify(producto) %>'>Agregar</button>
        </div>
      <% }) %>
    </section>
  <% } %>

  <hr>

  <!-- Resumen del carrito -->
  <section id="carrito">
    <h2>ðŸ›’ Tu Pedido</h2>
